<view class="view-community">
  <form class="form-community" bindsubmit='formSubmit' bindreset='formReset'>

    <view class="field field-name">
      <input type="text" name="name" placeholder="队伍名称"></input>
    </view>

    <view class="field field-image">
      <view class="upload-box" bindtap="selectImage">
        <image style='width:100%; height:100%;' placeholder="队伍头像" src="{{imagePath}}"></image>
      </view>
    </view>
    
    <view class="field field-description">
      <textarea name="bio" maxlength="300" placeholder="队伍简介"></textarea>
    </view>

    <view class="field field-submit">
      <button form-type="submit" class="btn btn-default btn-submit" hidden="{{reset}}">提交</button>
    </view>
  </form>
</view>