<view class="container edit_wrap">
<form bindsubmit="formSubmit" id="123">
    <view class='selectImg'bindtap="selectImage">
        <image class='team_img' placeholder="队伍头像" src="{{imagePath}}" ></image>
    </view>
    <view class="form_group">
        <text>队伍名称：</text>
        <input type="text" placeholder="一个霸气的名称" placeholder-class="placeholder_style" name="name" auto-focus/>
    </view>
    <view class="form_group">
        <text>队伍简介：</text>
                   <!-- <textarea class="team-info"  placeholder="请输入队伍简介(´･_･`)"maxlength="140" cursor-spacing="0"></textarea>          -->
        <input type="text" placeholder="" placeholder-class="placeholder_style" name="bio"/>
    </view>
    <view class="tips" >╰(￣▽￣)╭ 点击图片可选择队伍头像</view>
    <view class="save_btn_class">
        <button class="save_btn"  formType="submit">提交</button>
    </view>
</form>
</view>
<view class="view-community">
  <form class="form-community" bindsubmit='formSubmit' bindreset='formReset'>
  </form>
</view>

