/* pages/AddorEditTrainItems/AddorEditTrainItems.wxss */
.container_item {
    font-size:30rpx;
    padding:55rpx 0rpx 18rpx;
}

.item {
  display: flex;
  flex-direction: column;
}

.item_team,
.item_name,
.item_num {
    display: flex;
    flex-direction: row;
    justify-content:space-between;
    margin:18rpx;
    line-height: 60rpx;
}

.item text{
    width:180rpx;
}

.item input,
.team_choose {
    width:450rpx;
    border:1px solid #ddd;
    border-radius:8rpx;
    height:60rpx;
    line-height: 60rpx;
    padding:0rpx 20rpx;
}

.table {
  margin-top: 50rpx;
  margin-bottom: 70rpx;
  border-bottom: 1rpx solid gainsboro;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}

.td {
    width: 40%;
    justify-content: center;
    text-align: center;
}

.bg-w{
  background: snow;
}

.bg-g{
  background: #98FB98;
}

.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 2rem;
  align-items: center;
}

.btn {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}



.button_items{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height:120rpx;
}

.button_item{
  width:16%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ddd;
  background:	#F5F5F5;
  height:80rpx;
  border-radius: 5px;
  font-size: 11pt;
}
.grey_active{
  background-color: #f7f7f7;
}