.timeNow{
  color: #009688;
  text-align: center;
  font-size: 14px;
  font-family: Arial;
  background-color: #ECE9E9 ;
  height:35px;
  line-height: 35px;
}

.plan_block{
  height:76px;
  display: flex;
  flex-direction: row;
  border-top:  1rpx solid #ECE9E9; 
  text-align: center;
  justify-content: center;
  margin-left:3%; 
}

.left_info{
  width: 25%;
  align-items: center;
  line-height: 100%;
  display: flex;
  height:100%;
  justify-content: center;
}
.item_img_class{
  height:50px;
  width: 50px; 
}

.item_img{
  height:100%;
  width:100%;

  border-radius: 50%;
}
.right_info{
  display: flex;
  height:100%;
  width: 75%;
  flex-direction: column;
}

.lie1{
  height: 70%;
  display: flex;
  flex-direction: row; 
}

.item_name{
  font-size: 17px;
  line-height: 100%;
  width: 70%;
  text-overflow: hidden;
  display: flex;
  align-items: center;
}

.item_end_time{
  display: flex;
  align-items: center;
  font-family: Arial;
  width: 20%;
  font-size:15px;
  color: rgb(143, 142,148);
}

.arrow_img{
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  width: 60px;
}

.to_detail{
  height:20px;
  width: 20px;
}

.item_introduction{
  height: 50%;
  display: flex;
  font-size: 12px;
  font-family: Arial;
  color:rgb(156, 155, 162);
}

