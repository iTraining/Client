/* pages/JoinCommunity/JoinCommunity.wxss */

.community_info {
  display: flex;
  flex-direction: column;
  width: 100%;
}
.team_info {
  width: 80%;
}

.team_name {
  width:100%;
  margin:20rpx 20rpx 0 20rpx;
  margin-left: 20rpx;
  display: -webkit-flex;
  flex-direction: row;
  min-height:120rpx;
  font-size:80rpx;
  font-weight: bold;
  font: ‘宋体‘, ‘微软雅黑‘;
}

.team_members {
  margin-left: 30rpx;
  width:100%;
  display: flex;
  flex-direction: row;
}

.whoHaveJoin {
  font-size:36rpx;
  font: ‘宋体‘, ‘微软雅黑‘;
  color:#c2c2c2;
}
.team_bio {
  width: 100%;
  margin-bottom:10rpx;
  margin-left: 30rpx;
  font-size:36rpx;
  font: ‘宋体‘, ‘微软雅黑‘;
  border: 1px solid;
  border-color: beige;
  padding: 5px;
}
.bio_header {
  font-size:40rpx;
  font: ‘宋体‘, ‘微软雅黑‘;
  font-weight: bold;
}
.add_btn {
  width: 60%;
  margin-top: 30rpx;
  background: #14a1fd;
  color: #fff;
  border-radius: 70rpx;
  position : fixed;
  bottom : 20rpx;
}