  height: 100%;
  width: 100%;
  
}

.moment .userNameAndImg .right_side{
  display: flex;
  flex-direction: column;
}
.moment .userNameAndImg .right_side .momentsUserName{
  font-size: 37rpx;
  margin-left: 15rpx;
  margin-top: 10rpx;
  color: #4682B4;
}

.moment .userNameAndImg .right_side .momentsTime{ 
  font-size: 25rpx;
  margin-left: 15rpx;
  margin-top: 5rpx;
}
.moment .diary{
  height: 60rpx;
  margin-left: 50rpx;
  margin-top:  15rpx;
}

.moment .dianzan{
  height: 50rpx;
  width: 100%;
  display: flex;
  
  margin-bottom: 20rpx;
}

.moment .dianzan .dianzan_img_class {
  height:50rpx;
  width: 50rpx;
  margin-left: 15rpx;
}

.moment .dianzan .dianzan_img_class .dianzan_img {
  height:100%;
  width:100%;
}

.moment .dianzan .dianzan_person_name{
  margin-left: 20rpx;
  
