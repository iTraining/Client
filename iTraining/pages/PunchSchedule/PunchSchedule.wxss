/* pages/TrainingItemTodoList/TrainingItemTodoList.wxss */
.active_red{
    color:#e5004f;
}
.active_orange{
    color:#eb6100;
}
.active_yellow{
    color:#fff100;
}
.active_green{
    color:#8fc31f;
}
.active_purple{
    color:#aa2adf;
}

.page-body{
    width:100%;
    height:100%;
    margin-bottom: 5px;
}
.plan_title {
  width: 100%;
  height: 90rpx;
  background:#339966;
  position: relative;
}
.title{
  margin-left:35%;
  padding-top:20rpx;
  position: absolute;
  color:white;
  font-size:15px;
  font-weight: bold;
  font-family: 微软雅黑;
}

.header{
    font-size:30rpx;
    padding:55rpx 0rpx 18rpx;
    /*top: 0;*/
    /*position: fixed;*/
}

.field {
    display: flex;
    flex-direction: row;
    justify-content:space-between;
    margin:18rpx;
    line-height: 60rpx;
}

.field text{
    text-align: right;
    width:160rpx;
}

.field input,
.field picker,
.field textarea {
    width:460rpx;
    border:1px solid #ddd;
    border-radius:8rpx;
    height:60rpx;
    line-height: 60rpx;
    padding:0rpx 20rpx;
}
.field textarea {
  height:200rpx;
}
/* 导航对应内容项 */
.nav_section{
    width:100%;
    margin-bottom: 50px;
}
.nav_section_items{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    padding:30rpx;
    border-bottom:2rpx solid #ddd;
    position: relative;
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
    width:170rpx;
    height:158rpx;
}
.nav_section_items .section_image image{
    width:100%;
    height:100%;
}
.nav_section_items .section_cont{
    width:400rpx;
    font-size:26rpx;
    color:#a9a9a9;
}
.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_section_items .section_cont .section_cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nav_section_items .section_cont .section_cont_sub{
    font-size: 30rpx;
    line-height:60rpx;
    color:#000;
    margin-bottom:10rpx;
}
.nav_section_items .section_cont .section_cont_price{
    font-size:32rpx;
    color:#d24a58;
}
.nav_section_items .section_book{
    width:80rpx;
    height:80rpx;
    font-size:26rpx;
    border-radius:100%;
    background:#d24a58;
    line-height: 80rpx;
    color:#fff;
    text-align: center;
    margin-top:35rpx;
}

.button_items{
  position: fixed;
  display: flex;
  bottom: 0px;
  flex-direction: row;
  justify-content: space-between;
}
.button_item{
  width: 380rpx;
}

.no_plan {
  text-align:center;
  font-size:20px;
}

.punch_btn{
    width:90%;
    background:#d24a58;
    font-size: 32rpx;
    color:#fff;
    border-radius: 0rpx;
    margin:40rpx 0rpx 10rpx;
}