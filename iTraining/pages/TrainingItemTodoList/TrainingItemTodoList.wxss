.active_red{
    color:#e5004f;
}
.active_orange{
    color:#eb6100;
}
.active_yellow{
    color:#fff100;
}
.active_green{
    color:#8fc31f;
}
.active_purple{
    color:#aa2adf;
}

.container scroll-view{
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  top: 0;  
}

.page_body {
    width:100%;
    height:100%;
}

.nav_section_items{
    display:flex;
    flex-direction: row;
    overflow: hidden;
    justify-content: space-between;
    
    border-top:2rpx solid #ddd;
    position: relative;
}

.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
    width:140rpx;
    height:140rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
}
.nav_section_items .section_image image{
    width:80%;
    height:80%;
    border-radius: 50%;   
}

.nav_section_items .section_cont{
    width:400rpx;
    font-size:26rpx;
    color:#a9a9a9;
}
.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}


.nav_section_items .section_cont .section_cont_sub{
    font-size: 35rpx;
    line-height:60rpx;
    color:#000;
    font-weight: 400;
    font-family: Microsoft YaHei;
    margin-top: 10rpx;
}

.nav_section_items .section_cont .block1{
    height:45rpx;
    display: flex;
    align-content: center;
}
.nav_section_items .section_cont .block1 .img1{
    height:30rpx;
    width:30rpx;
}

.nav_section_items .section_cont .block1 .img2{
    height:30rpx;
    width:30rpx;
    margin-left: 20rpx
}

.nav_section_items .section_cont .section_cont_num{
    font-size:30rpx;
    color:#000;
    margin-bottom: 10rpx;
}
.nav_section_items .section_book{
    width:100rpx;
    height:50rpx;
    font-size:30rpx; 
    background:#45C7C9;
    color:#fff;
    text-align: center;
    margin-top:50rpx;
    margin-right: 50rpx;
}

.container .page_body .img3 image{
  height:50rpx;
  width: 100%;
  
}
.today{
  color: green;
  display: flex;
  justify-content: center;
}

