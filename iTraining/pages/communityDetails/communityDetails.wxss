.main {
  width: 100%;
  display: flex; 
  /* justify-content: space-around;  */
  background-color: antiquewhite;
}


.img{
  width: 110rpx;
  height: 110rpx;
}
.infoItem{
  margin: 50rpx;
}
.memberName{
  margin: 0rpx;
  font-size: 30rpx;
}


.team_member_img{
  width: 80rpx;
  height: 80rpx;
  border: 1px solid #ccc;
  /* border-radius: 50%;     */
}

.invite_btn{
    margin-top:50rpx; 
    width:60%;
    background:rgba(0, 150, 136, 0.46);
    font-size: 32rpx;
    color:#fff;
     display: flex;
    justify-content: center;
    align-items: center;
}
.delete_btn{
    margin-top: 40rpx;
    width:60%;
    background:	#F08080;
    font-size: 32rpx;
    color:#fff;
    display: flex;
    justify-content: center;
    align-items: center;
}

/*-------------------------  */
.edit_wrap{
    font-size:30rpx;
    padding:40rpx 0rpx 18rpx;
    display: flex;
}
.form_group{
    display: flex;
    flex-direction: row;
    line-height: 80rpx;
    margin-top: 20rpx;
}
.form_group text{
    width:160rpx;
}
.form_group input,
.form_group picker{
    width:460rpx;
    border:1px solid #ddd;
    border-radius:8rpx;
    height:60rpx;
    line-height: 60rpx;
    padding:0rpx 20rpx;
}
.form_group .sendmsg_input{
    width:290rpx;
    margin-right:14rpx;
}
.form_group button{
    font-size:30rpx;
    height:60rpx;
    line-height: 60rpx;
    border:1px dotted #fff;
    background:white;
    padding:0rpx;
    margin:0rpx;
    outline:none;
    color:#000;
}
.placeholder_style{
    font-family:Arial;
    color:#adadad;
}
.save_btn{
    width:90%;
    background:#d24a58;
    font-size: 32rpx;
    color:#fff;
    border-radius: 0rpx;
    margin:40rpx 0rpx 10rpx;
}



.form_group1{
  display: flex;
  flex-direction: row;
  align-content: left;
  flex-wrap: wrap;
  width: 100%;
  height:120rpx;
  margin-top: 20rpx;
}

.form_group1 .team_compo{
  align-content: left;
  display: flex;
  width: 165rpx;
  margin-left: 45rpx;
  font-size:30rpx;
}



.form_group2{
  width: 100%;
  display: flex;
  flex-direction: row;
  height:180rpx;
}
.form_group2 text{
    width:160rpx;
}
.team_img{
  height: 140rpx;
  width: 140rpx;
  border-radius: 50%;    
}
.selectImg{
  height:160rpx;
  width: 20%;
  
  display: flex;
  justify-content: center;
  align-items: center;
}

.edit_tip{
  height:160rpx;
  font-size:8pt;
  display: flex;
  flex-direction: column-reverse;
  color: #a9a9a9;
}